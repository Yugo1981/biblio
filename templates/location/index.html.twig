{% extends 'base.html.twig' %}

{% block title %}Nouvelle Location{% endblock %}

{% block body %}
    <button class="button"><a href="{{ path('administration_biblio') }}">Administration</a></button>
    <button class="button"><a href="{{ path('index_biblio') }}">Accueil</a></button>
    <h1>Location index</h1>
<table class="table">
        <thead>
        <td><button><a href="{{ path('location_new') }}">Nouveau</a></button></td>
        <td><button><a href="{{ path('location_newform') }}">Nouveau Formulaire</a></button></td>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Titre</th>
                <th>Categorie</th>
                <th>Image</th>
                <th>Description</th>
                <th>Valeur</th>
                <th>Adresse</th>
                <th>Accessibilit√©</th>
                <th>Status</th>
                <th>A la une</th>
            </tr>
        </thead>
        <tbody>
        {% for locations in location %}
            <tr>
                <td>{{ locations.id }}</td>
                <td>{{ locations.date | date("d/m/Y") }}</td>
                <td>{{ locations.titre }}</td>
                <td>{{ locations.categorie }}</td>
                <td>{{ locations.image }}</td>
                <td>{{ locations.description }}</td>
                <td>{{ locations.valeur }}</td>
                <td>{{ locations.adresse }}</td>
                <td>{{ locations.accessibility }}</td>
                <td>{{ locations.status }}</td>
                <td>{{ locations.alaune }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
